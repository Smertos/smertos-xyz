{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "lib": [
            "DOM",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true
    }
}
