{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "lib": [
            "DOM",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    }
}
